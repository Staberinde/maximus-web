[% f = form.field(field) %]
<dt><label for="[% f.id %]">[% f.label %]</label></dt>
<dd>
   [% FOR option IN f.options.as_list %]
     <input type="checkbox" value="[% option.value %]" 
        name="[% f.name %][]"
     [% IF option.value == f.fif %]
        checked="checked"
     [% END %] class="[% class %]">
     [% option.label | html %]<br />
   [% END %]
</dd>
[% IF f.has_errors %]
    [% FOR error IN f.errors %]
        <dd class="error">[% error %]</dd>
    [% END %]
[% END %]
